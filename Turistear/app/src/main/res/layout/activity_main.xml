                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:onClick="seleccionar"
                        android:text="Bancos" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/banco" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
